
open Printf

type t:
  gen_num : int
  preds : list(Pred.t)
  body : Type.t

def mono(t): {
  gen_num = 0;
  preds = [];
  body = t;
}

def poly(n, preds, t): {
  gen_num = n;
  preds = preds;
  body = t;
}

def show({gen_num;preds;body}):
  var shower = Type.create_shower(gen_num)
  sprintf("%s%s", Pred.show_list(shower, preds), Type.show(shower, body))
